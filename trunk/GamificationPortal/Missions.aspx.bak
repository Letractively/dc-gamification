<asp:Content ID="Content1" ContentPlaceHolderID="HeadContent" runat="server">
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="FeaturedContent" runat="server">
</asp:Content>
<asp:Content ID="Content3" ContentPlaceHolderID="MainContent" runat="server">
    <dx:ASPxNavBar ID="MissionsNavigationBar" runat="server" DataSourceID="XmlDataSource1" EnableAnimation="True" OnGroupDataBound="MissionsNavigationBar_GroupDataBound" AutoCollapse="True" GroupSpacing="0px" ShowExpandButtons="False">
        <GroupHeaderTemplate>
            <table>
                <tr>
                    <td style="width: 300px;">
                        <asp:Label ID="lblMissionName" runat="server" Text='<%# Container.EvalDataItem("Name") %>'></asp:Label></td>
                    <td style="width: 70px;"><asp:Label ID="lblMissionType" runat="server" Text='<%# Container.EvalDataItem("Type") %>'></asp:Label> </td>
                    <td style="width: 70px;"><asp:Label ID="lblMissionReward" runat="server" Text='<%# Container.EvalDataItem("Reward") %>'></asp:Label></td>
                    <td><asp:Label ID="lblMissionSkills" runat="server" Text=""></asp:Label></td>
                    <td><asp:Label ID="lblMissionCreateDate" runat="server" Text='<%# Container.EvalDataItem("CreateDate") %>'></asp:Label> </td>
                    <td><asp:Label ID="lblMissionEndDate" runat="server" Text='<%# Container.EvalDataItem("EndDate") %>'></asp:Label></td>
                    <td>
                        <dx:ASPxRatingControl ID="rcMissionRatingValue" runat="server" ItemCount="3" Value="1" ReadOnly="True">
                        </dx:ASPxRatingControl>
                    </td>
                </tr>
            </table>
        </GroupHeaderTemplate>

        <GroupHeaderStyle BackColor="#FFFFCC" Font-Bold="False" HorizontalAlign="Left" Wrap="True">
            <Paddings PaddingBottom="0px" PaddingLeft="10px" PaddingRight="0px" PaddingTop="0px" />
        </GroupHeaderStyle>
        <GroupContentStyle Wrap="False">
        </GroupContentStyle>
        <ItemStyle Wrap="False">
        <Paddings PaddingLeft="5px" />
        </ItemStyle>

        <GroupContentTemplate>
             <asp:Label ID="lblMissionDescription" runat="server" Text='<%# Container.EvalDataItem("Description") %>'></asp:Label>
        </GroupContentTemplate>
        
    </dx:ASPxNavBar>
    <asp:XmlDataSource ID="XmlDataSource1" runat="server" DataFile="~/XMLFile1.xml" XPath="//mission"></asp:XmlDataSource>
</asp:Content>
